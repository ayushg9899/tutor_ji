<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/tutorcard"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/colorPrimary"
    android:layout_marginBottom="30dp">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/tutor"
        android:id="@+id/image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical">
        
        

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tutor name"
        android:id="@+id/tutorname"
        android:textColor="#000"
        android:textSize="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode"
        android:text="tutor mode"
        android:textColor="#000"
        android:textSize="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="email"
        android:id="@+id/tutoremail"
        android:layout_marginBottom="2dp"
        android:textSize="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tutorcity"
        android:textColor="#000"

        android:text="City"
        android:layout_marginBottom="10dp"
        android:textSize="10dp"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See all details"
        android:id="@+id/seemore"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>